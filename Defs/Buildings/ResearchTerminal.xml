<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>iRimDesktop</defName>
        <label>iRim Desktop Computer</label>
        <description>This desktop workstation allows researchers to work with increased efficiency</description>
        <!-- graphicData copied from Tool Cabinet -->
        <graphicData>
            <texPath>Things/Building/Misc/ToolCabinet</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
            <color>(96,114,95)</color>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <!-- My understanding is this allows passing through and controls the physical space -->
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.35</staticSunShadowHeight>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <pathCost>42</pathCost>
        <!-- Stats once built-->
        <size>(1, 1)</size>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>2500</WorkToBuild>
            <Mass>20</Mass>
            <Flammability>1.0</Flammability>
        </statBases>
        <building>
            <destroySound>BuildingDestroyed_Metal_Small</destroySound>
        </building>
        <!-- Build Costs and Research Info -->
        <costList>
            <Steel>100</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
            <Gold>20</Gold>
        </costList>
        <researchPrerequisites>
            <li>MicroelectronicsBasics</li><!-- TODO: Custom research for computers? -->
        </researchPrerequisites>
        <designationCategory>Misc</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <!-- TODO: Maybe these should be required at a bench then have intelligence skil? -->
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <comps>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <ResearchSpeedFactor>0.2</ResearchSpeedFactor>
                </statOffsets>
                <maxSimultaneous>2</maxSimultaneous>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>200</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_Breakdownable"/>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
    </ThingDef>
</Defs>
